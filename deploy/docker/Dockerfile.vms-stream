FROM rust:1.75 as builder

WORKDIR /build

COPY Cargo.toml rust-toolchain.toml ./
COPY libs ./libs
COPY services/vms-stream ./services/vms-stream

RUN cargo build --release -p vms-stream

# Runtime
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

COPY --from=builder /build/target/release/vms-stream /usr/local/bin/

EXPOSE 8443 9000 9094

CMD ["vms-stream"]
