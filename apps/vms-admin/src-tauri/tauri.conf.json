{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SMU VMS Admin",
  "version": "1.0.0",
  "identifier": "com.smu.vms.admin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SMU VMS Admin",
        "width": 1280,
        "height": 800,
        "center": true,
        "resizable": true,
        "decorations": true,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "SMU Prod",
    "copyright": "Â© 2026 SMU Prod. All rights reserved.",
    "category": "Utility",
    "shortDescription": "SMU VMS Administration Client",
    "longDescription": "Enterprise Video Management System - Administration Client for managing cameras, users, servers and configurations."
  }
}